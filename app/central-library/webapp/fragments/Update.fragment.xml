<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog id="_IDGenDialog1" class="addnewbook" resizable="true" contentHeight="35%" contentWidth="20%">
        <customHeader>
            <Bar id="_IDGenBar1">
                <contentMiddle>
                    <Text id="_IDGenText1" text="Update Book" />
                </contentMiddle>
            </Bar>
        </customHeader>
        <Label id="_IDGenLabel1" />
        <HBox id="_IDGenHBox1" justifyContent="Center">
            <Table id="_IDGenTable1" inset="false">
                <columns>
                    <Column id="_IDGenColumn1" width="40%">
                        <Text id="_IDGenText2" text="Field" />
                    </Column>
                    <Column id="_IDGenColumn2" width="60%">
                        <Text id="_IDGenText3" text="Input" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Label id="_IDGenLabel2" text="ISBN" labelFor="ISBNInput" />
                            <Input id="_IDGenInput1" placeholder="Enter ISBN no" class="input" />
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem id="_IDGenColumnListItem2">
                        <cells>
                            <Label id="_IDGenLabel3" text="Title" labelFor="BookInput" />
                            <Input id="_IDGenInput2" placeholder="Enter Book Title" class="input" />
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem id="_IDGenColumnListItem3">
                        <cells>
                            <Label id="_IDGenLabel4" text="Author" labelFor="AuthorInput" />
                            <Input id="_IDGenInput3" placeholder="Enter Author name" class="input" />
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem id="_IDGenColumnListItem4">
                        <cells>
                            <Label id="_IDGenLabel5" text="Quantity" labelFor="quantityInput" />
                            <Input id="_IDGenInput4" placeholder="Enter Quantity" class="input" />
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem id="_IDGenColumnListItem5">
                        <cells>
                            <Label id="_IDGenLabel6" text="Genre" labelFor="genreInput" />
                            <Input id="_IDGenInput5" placeholder="Enter Genre" class="input" />
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem id="_IDGenColumnListItem6">
                        <cells>
                            <Label id="_IDGenLabel7" text="Status" labelFor="statusInput" />
                            <Input id="_IDGenInput6" placeholder="Enter Status" class="input" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </HBox>

        <beginButton>
            <Button id="_IDGenButton1" text="Update" press="onUpdate" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton2" text="Cancel" press="onCancelUpdate" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

