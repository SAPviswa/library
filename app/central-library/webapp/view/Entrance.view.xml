<mvc:View
    controllerName="com.app.centrallibrary.controller.Entrance"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        class="background-image"
        title="{i18n>title}"
    >
        <VBox
            id="_IDGenVBox1"
            class="sapUiSmallMargin"
            alignItems="Center"
        >
            <form:SimpleForm
                id="idSimpleForm"
                layout="ResponsiveGridLayout"
                class="form"
            >
                <form:content>
                    <Title
                        id="__xmlview0--title1"
                        text="Central Library"
                        textAlign="Center"
                        class="title1"
                    />
                    <Label id="_IDGenLabel2" />

                    <Title
                        id="__xmlview0--title2"
                        text="Login Details"
                        textAlign="Left"
                        class="title2"
                    />
                    <Label
                        id="_IDGenTitle1"
                        text="Username"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="user"
                        placeholder="Enter Username"
                        width="100%"
                        textAlign="Initial"
                    />

                    <Label
                        id="_IDGenLabel1"
                        text="Password"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="pwd"
                        type="Password"
                        placeholder="Enter Password"
                        width="100%"
                        textAlign="Initial"
                    />
                    <core:Title id="_IDGenTitle2" />
                    <VBox
                        id="_IDGenVBox2"
                        alignItems="Center"
                        class="sapUiSmallMarginTop"
                    >
                        <HBox
                            id="_IDGenHBox1"
                            class="btn"
                        >
                            <Button
                                icon="sap-icon://visits"
                                class="button"
                                id="btn"
                                text="Login"
                                type="Emphasized"
                                width="100%"
                                press="onBtnClick"
                            />
                            <!-- <Button
                                    id="idClearFilterButtonValue"
                                    text="Clear Filter"
                                    type="Emphasized"
                                    press="onClearFilterPress"
                                /> -->
                        </HBox>
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </VBox>
    </Page>
</mvc:View>
