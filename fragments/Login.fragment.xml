<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBooksDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Add New Book"
    >

        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="2"
                adjustLabelSpan="false"
                emptySpanXL="3"
                emptySpanL="3"
                emptySpanM="3"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="2"
                singleContainerFullSize="false"
            >
            <Label
                    id="idLabel"
                    text="ID"
                />
                <Input
                    id="idInput"
                    value="{localModel>/ID}"
                />
                <Label
                    id="idTitleLabel"
                    text="Title"
                />
                <Input
                    id="idTitleInput"
                    value="{localModel>/title}"
                />
                <Label
                    id="idStockLabel"
                    text="Stock"
                />
                <Input
                    id="idStockInput"
                    value="{localModel>/stock}"
                />
                <Label
                    id="idAuthorLabel"
                    text="Author"
                />
                <Input
                    id="idAuthorInput"
                    value="{localModel>/author}"
                />
                <Label
                    id="idGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idGenreInput"
                    value="{localModel>/genre}"
                />
            </form:SimpleForm>
        </content>
                <beginButton>
            <Button
                id="idCreateButton"
                text="Add"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>